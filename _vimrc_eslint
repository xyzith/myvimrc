" eslint checker and formatters
let g:syntastic_mode_map = { 'mode': 'passive' }
let g:syntastic_javascript_checkers = ['eslint']
let g:syntastic_javascript_eslint_exec = 'eslint'
let g:syntastic_javascript_eslint_args = ['--fix', '--ext=.js,.mjs']

function AutoFixJS()
	if exists('b:syntastic_private_balloons')
		exec ':SyntasticReset'
	else
		exec ':SyntasticCheck'
		exec ':e!'
	endif
	echo ''
endfunction

noremap <Leader>f :call AutoFixJS() <CR>

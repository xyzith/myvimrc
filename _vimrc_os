" backup and swap dir
cd $HOME
execute "set backupdir=".g:rc_path."vimtmp"
execute "set directory=".g:rc_path."vimswp"

let g:fullScreened = 0

function ToggleFullscreen()
	if g:fullScreened == 0
		let g:fullScreened = 1
		simalt ~x
	else
		let g:fullScreened = 0
		simalt ~r
	endif
endfunction

map <F11> :call ToggleFullscreen()<CR>

" Set UI lang
set langmenu=en_US
let $LANG = 'en_US'
source $VIMRUNTIME/delmenu.vim
source $VIMRUNTIME/menu.vim

" Hide tooltip
set guioptions-=T
set guioptions-=m

function TexCompile()
	let l:path =  expand('%:h')
	let l:file = expand('%:t')
	let l:shortfile = expand('%:t:r')
	if &ft == 'tex'
		execute "!cd ".l:path." & pdflatex ".l:file." & pdflatex ".l:file." & start ".l:shortfile.".pdf"
	endif
endfunction

function HaskellRun()
	exec "!ghc ".@%." & ".expand('%:r').".exe"
endfunction

function LuaRun()
	exec "!lua53 ".@%
endfunction

colorscheme srcery-drk

noremap <Leader>T :call TexCompile() <CR>
noremap <Leader>H :call HaskellRun() <CR>
noremap <Leader>L :call LuaRun() <CR>
noremap <Leader>N :!start cmd /C npm start && pause <CR>

" scp stuff

function Scplocal(path)
	let g:netrw_scp_cmd = "pscp -q -i ".$home."\\keys\\local.ppk"
	execute "e! scp://taylor@127.0.0.1/".a:path."/"
endfunction

function Scphome(path)
	let g:netrw_scp_cmd = "pscp -q -i ".$home."\\keys\\home.ppk"
	execute "e! scp://lain@taylort.hopto.org/".a:path."/"
endfunction

command! -nargs=1 Home call Scphome(<f-args>)
command! -nargs=1 Local call Scplocal(<f-args>)

execute "so ".g:rc_path."_vimrc_eslint"

let NERDTreeQuitOnOpen=1
noremap <Leader>n :tabnew \| :NERDTree<CR>
noremap <Leader>v :vnew \| :NERDTree<CR>

